{
  "compilerOptions": {
      "outDir": "./build",
      "target": "es6",
      "esModuleInterop": true,
      "jsx": "react",
      "strictNullChecks": true,
      "strictFunctionTypes": true,
      "strictBindCallApply": true,
      "noImplicitThis": true,
      "moduleResolution": "node",
      "module": "commonjs",
      "types": ["cypress"],
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "strictPropertyInitialization": false
  },
  "include": [
      "./src/**/*",
      "./cypress/**/*"
  ],
}